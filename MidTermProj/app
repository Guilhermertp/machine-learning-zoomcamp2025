from flask import Flask, request, jsonify
import pickle
import pandas as pd

app = Flask(__name__)

# Load model
with open("model.pkl", "rb") as f:
    model = pickle.load(f)

# Load scaler ONLY if you used one (Logistic Regression)
try:
    with open("scaler.pkl", "rb") as f:
        scaler = pickle.load(f)
    use_scaler = True
except:
    use_scaler = False


@app.route("/predict", methods=["POST"])
def predict():
    try:
        data = request.json  # Input must be JSON
        
        # Convert to DataFrame
        df = pd.DataFrame([data])

        # Apply scaler if needed
        if use_scaler:
            df = scaler.transform(df)

        # Predict
        prediction = model.predict(df)[0]
        prob = model.predict_proba(df)[0][1]

        return jsonify({
            "tsunami_prediction": int(prediction),
            "probability_of_tsunami": float(prob)
        })
    
    except Exception as e:
        return jsonify({"error": str(e)})


@app.route("/", methods=["GET"])
def home():
    return jsonify({"message": "Tsunami Prediction API Running"})


if __name__ == "__main__":
    app.run(host="0.0.0.0", port=5000)